[alias]
    # https://gist.github.com/4117588
    alias = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\\\t => \\2/' | sort
    b = branch -a
    ci = commit
    ci = commit --amend
    co = checkout
    d = diff
    dw = diff --color-words
    di = diff
    f = fetch --prune
    fs = !git f && git su
    ignore = !([ ! -e .gitignore ] && touch .gitignore) | echo $1 >> .gitignore
    info = remote show origin
    l = log --graph -n 20 --pretty=format:'%C(yellow)%h%C(cyan)%d%Creset %s %C(green)- %an, %cr%Creset'
    ll = log --stat --abbrev-commit
    ln = log --graph -n 20 --pretty=format:'%C(yellow)%h%C(cyan)%d%Creset %s %C(green)- %an, %cr%Creset' -name-status
    lp = log --oneline -n 20 -p
    ls = log --stat --abbrev-commit -n 1 # display previous log
    r = !git ls-files -z --deleted | xargs -0 git rm
    s = status -sb
    st = status -sb
    hist = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
        fetch-pulls = fetch origin +refs/pull/*:refs/remotes/pull/*
[core]
    excludesfile = ~/.gitignore_global
    pager = less -r
[color "diff"]
    whitespace = red
[color]
    ui = auto
[diff]
    tool = meld
    # external = ext_p4diff
#[merge]
#        tool = ext_p4merge
#        keepbackup = false
#[mergetool "ext_p4merge"]
#        trustExitCode = false
#        cmd = ext_p4merge \"$BASE\" \"$LOCAL\" \"$REMOTE\" \"$MERGED\"
[gui]
    editor = gedit
    diffcontext = 7
    historybrowser = gitk
    fontdiff = -family \"Ricty Discord\" -size 9 -weight normal -slant roman -underline 0 -overstrike 0
[difftool "Meld"]
    path = /usr/bin/meld
    cmd = '/usr/bin/meld' $LOCAL $REMOTE
[mergetool "Meld"]
    path = /usr/bin/meld
    cmd = '/usr/bin/meld' $BASE $LOCAL $REMOTE $MERGED
[mergetool]
    keepBackup = false
[merge]
    ff = false
    tool = meld
    keepbackup = false
[push]
    default = tracking
